@using BitOrchestraTestTask.BL
@model List<User>
<table>
    <thead>
        <tr>
            <th hidden>Id</th>
            <th>Name</th>
            <th>DateOfBirth</th>
            <th>Married</th>
            <th>Phone</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++) 
        {
            <tr>
                <td hidden>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].DateOfBirth.ToString()</td>
                <td>@Model[i].Married</td>
                <td>@Model[i].Phone</td>
                <td>@Model[i].Salary.ToString()</td>
                @*<a href="UpdateUser/@Model[i].Id">Edit</a>*@
                <td>@Html.ActionLink("Edit", "UpdateUser", new { id = Model[i].Id })</td>
                @*<a href="user/@Model[i].Id">Delete</a>*@
                <td>@Html.ActionLink("Delete", "DeleteUser", new { id = Model[i].Id })</td>
            </tr>
        }
    </tbody>
</table>