@using BitOrchestraTestTask.BL
@model List<User>
<table>
    <thead>
        <tr>
            <th hidden>Id</th>
            <th>Name</th>
            <th>DateOfBirth</th>
            <th>Married</th>
            <th>Phone</th>
            <th>Salary</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++) 
        {
            <tr>
                <td hidden>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].DateOfBirth.ToString()</td>
                <td>@Model[i].Married</td>
                <td>@Model[i].Phone</td>
                <td>@Model[i].Salary.ToString()</td>
                @*<a href="UpdateUser/@Model[i].Id">Edit</a>*@
                <td><button onclick="Edit(i)">Edit</button></td>
                @*<a href="user/@Model[i].Id">Delete</a>*@
                <td>@Html.ActionLink("Delete", "DeleteUser", new { id = Model[i].Id }, new{onclick="return confirm('Are you sure you want to delete this user?')"})</td>
            </tr>
        }
    </tbody>
</table>

@Html.BeginForm("UpdateUser", "Home", FormMethod.Post))
{
    <input type="hidden" id="Id" name="Id" value="" />
    <label for="userName">Name:</label>
    <input type="text" id="userName" value="" />
    <br />
    <label for="dateOfBirth">Date of Birth:</label>
    <input type="date" id="dateOfBirth" value="" />
    <br />
    <label for="married">Married:</label>
    <input type="checkbox" id="married" name="married" value="true" />
    <br />
    <label for="phone">Phone:</label>
    <input type"text" id="phone" value="" />
    <br />
    <label for="salary">Salary:</label>
    <input type"salary" id="number" value="" />
    <br />
    <button type="submit">Save</button>
}