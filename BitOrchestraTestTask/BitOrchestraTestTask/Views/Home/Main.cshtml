@using BitOrchestraTestTask.BL
@model List<User>
<input type="text" id="filterInput" onkeydown="Filter(event)" placeholder="Search">
<table id="dataTable">
    <thead>
        <tr>
            <th hidden>Id</th>
            <th onclick="Sort(1)">Name ASC DESC</th>
            <th onclick="Sort(2)">DateOfBirth ASC DESC</th>
            <th onclick="Sort(3)">Married ASC DESC</th>
            <th onclick="Sort(4)">Phone ASC DESC</th>
            <th onclick="Sort(5)">Salary ASC DESC</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++) 
        {
            <tr data-id="@Model[i].Id">
                <td class="UserIdTable" hidden>@Model[i].Id</td>
                <td data-field="Name" class="editable">@Model[i].Name</td>
                <td data-field="DateOfBirth" class="editable">@Model[i].DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td data-field="Married" class="editable">@Model[i].Married</td>
                <td data-field="Phone" class="editable">@Model[i].Phone</td>
                <td data-field="Salary" class="editable">@Model[i].Salary.ToString()</td>
                @*<a href="UpdateUser/@Model[i].Id">Edit</a>*@
                <td><button class ="editBtn" onclick="EditUser(this)">Edit</button></td>
                <td><button class="saveBtn" onclick="SaveUser(this)">Save</button></td>
                @*<a href="user/@Model[i].Id">Delete</a>*@
                <td>@Html.ActionLink("Delete", "DeleteUser", new { id = Model[i].Id }, new{onclick="return confirm('Are you sure you want to delete this user?')"})</td>
            </tr>
        }
    </tbody>
</table>